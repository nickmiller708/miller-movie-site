<div class="container">
  <div class="row">
      <div class='col-md-8'>
          <div class='row'>
            <div class='pull-left'>
              <h2> Welcome Back, <%= @user.name %>!</h2>
             </div>
            </div> 
          <div class='panel panel-primary'>
              <div class='panel-heading'>
                Most Recent Posts
              </div>
              <div class='panel-body'>
                Most Recent Posts will be here by Type
              </div>
          </div>
      </div>
      <div class="col-md-4">
        <h3><span class="glyphicon glyphicon-exclamation-sign"></span> Post New Reviews </h3>
          <ul>
              <li>  
                 <%= link_to "Create New Post/Review", admin_homepage_path %> 
              </li>
              <li>
                  <%= link_to "View All Your Posts", admin_homepage_path%> 
              </li> 
              <li>
                 <%= link_to "View Existing Review Categories", categories_path %> 
              </li>
              <li>
                 <%= link_to "Submit New Review Category", new_category_path %> 
              </li>
          </ul>
        <h3><span class="glyphicon glyphicon-question-sign"></span> Account Actions </h3>
          <ul>
              <li>  
                 <%= link_to "View Account Details", @user %> 
              </li>
              <li>
                 <%= link_to "Add Security Question Answers (TBD)", admin_homepage_path %> 
              </li>
              <li>
               <td><%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure? Will set you to inactive, but you can rejoin later!' } %></td>
              </li> 
          </ul>
    </div>
  </div> <!-- row -->
</div>
