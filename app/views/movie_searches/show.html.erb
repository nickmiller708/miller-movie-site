<table class='table-condensed'> 
  <tr> 
  <td class='col-md-4'>
    <img src="<%= @movie.poster%>" style="max-width: 100%"></img> 
  </td> 
  <td class='col-md-6'>
    <h3> <%= @movie.title %> (<%= @movie.released.split.last %>) Rated: <%= @movie.rated %>  </h3>
      <tr>
           <td class="col-md-4">
            <strong> Rotten Tomatoes </strong> <br> 
            <strong> Current Score: </strong> <%= @movie.try(:rotten_tomatoes).present? ? @movie.rotten_tomatoes : "No Rotten Tomatoes Information" %> <br>
            <strong> Movie Status </strong> <%= @movie.fresh_movie? ? "Fresh" : "Rotten" %>
        </td>   
          <td class="col-md-4">
          <strong> Imdb Information </strong> 
          <% imdb_information = @movie.imdb_information %> <br>
          IMDB Rating: <%= imdb_information["imdb_rating"] %> <br>
          IMDB Votes: <%= imdb_information["imdb_votes"] %> <br> 
          <a href="<%= @movie.imdb_link%>" class="btn btn-success btn-md">
              <i class="fa fa-imdb"></i> Imdb Link
            </a>           
        </td> 
        <td class="col-md-4">
            <% if @movie.methods.include?(:metacritic) %>
            <strong> Metacritic Ratings </strong> <br>  
            <strong> Metacritic ranking</strong>  <%= @movie.metacritic %> <br>
            <strong> <%= @movie.determine_metacritic_rank %> </strong>  
            <div style="width: 25px; height: 25px; background-color: <%= @movie.determine_metric_color %>"></div>
            <% end %> 
        </td>   
      </tr> 
    </td>  
    <tr >
      <td class='col-md-12'>
        <tr> 
          <td class='col-md-2'>
            Plot 
          </td>
          <td class='col-md-10'>
            <%= @movie.plot %> 
          </td>
        </tr>
        <tr> 
          <td class='col-md-2'>
            Starring
          </td>
          <td class='col-md-10'>
            <%= @movie.actors %> 
          </td>
        </tr>
        <tr> 
          <td class='col-md-2'>
            Directed By: 
          </td>
          <td class='col-md-10'>
            <%= @movie.writer %> 
          </td>
        </tr>

        <tr> 
          <td class='col-md-2'>
            Wrtier
          </td>
          <td class='col-md-10'>
            <%= @movie.writer %> 
          </td>
        </tr>
        <tr> 
          <td class='col-md-2'>
            Awards and Nominations 
          </td>
          <td class='col-md-10'>
            <%= @movie.awards %> 
          </td>
        </tr>

        <tr> 
          <td class='col-md-2'>
            Release Date: 
          </td>
          <td class='col-md-10'>
            <%= @movie.released %> 
          </td>
        </tr>

        <tr> 
          <td class='col-md-2'>
            Dvd/Blu Ray Release
          </td>
          <td class='col-md-10'>
            <%= @movie.try(:dvd).present? ? @movie.dvd : "Not Announced" %> 
          </td>
        </tr>

      </td> 
    </tr> 
  </table> 
</div> 
