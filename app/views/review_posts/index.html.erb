<div class='container'>
<p id="notice"><%= notice %></p>

<h1>All Reviews</h1>

<table class='table table-condensed'>
  <thead>
    <tr>
      <th> Title </th>
      <th> Written By </th> 
      <th> Preview </th> 
      <th> Created At </th> 
      <th> Updated At </th> 
      <th> Read Article</th>
    </tr>
  </thead>

  <tbody>
    <% @review_posts.each do |review_post| %>
      <tr>
        <td> <%= review_post.title %> </td>  
        <td> <%= review_post.user_admin.name %> </td>
        <td> <%= review_post.contents.split(' ')[0..25].join(' ')  %> </td>  
        <td> <%= time_ago_in_words(review_post.created_at) %></td> 
        <td> <%= time_ago_in_words(review_post.updated_at) %></td>
        <td><%= link_to 'Read Article', review_post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div> 
