<div class="container">
  <% if flash[:notice].present? %> 
      <div style="color: green;"> 
        Admin Message: 
        <%= flash[:notice] %> 
      </div> 
  <% end %> 
  <div class="row">
      <div class='col-md-8 '>
              <div class='panel panel-default'>
                <div class='panel-heading'> 
                 Most Recent Reviews 
                </div>
                <div class='panel-body'>
                <% @reviews.each do |category, reviews| %> 
                <strong> <%= "Recent #{category.category_name} Reviews" %>   </strong> 
                <table class='table table-condensed'>
                  <% if reviews.present? %> 
                    <% reviews = reviews.reverse.take(5) %>      
                  <% reviews.each do |review| %> 
                    <tr>
                      <td>
                        <%= review.title %> 
                      </td> 
                      <td>
                        <%= "Created #{time_ago_in_words(review.created_at)} ago" %>
                      </td>
                      <td>
                        <%= link_to "View Review", review %>
                      </td> 
                    </tr>
                  <% end %> 
                  <% else %>
                    <tr>
                      <td>
                      No Recent Reviews 
                      </td> 
                    </tr>
                  <% end %> 
                </table>
                <%= link_to "View All #{category.category_name} Reviews", category %><br>
              <% end %>

              </div>
            </div> 
      </div>
      <div class="col-md-4">
        <h3><span class="glyphicon glyphicon-question-sign"></span> Who am I? </h3>
          <ul>
              <li>  
                 Graduate of Centre College
              </li>
              <li>
                 Lover of movies, video games, and music
              </li>
              <li>
                  Just a simple programmer from Chattanooga, TN
              </li>
          </ul>
      <h3><span class="glyphicon glyphicon-info-sign"></span> What to do! </h3>
      <ul>
          <li>
            View things that interest me like movies, video games, etc.
          </li>
          <li>
            View other side projects I want to make
          </li>
          <li>
            View my resume and other experiences
          </li>
      </ul>
    </div>
  </div> <!-- row -->
</div>
