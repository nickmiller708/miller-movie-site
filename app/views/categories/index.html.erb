<div class='container'>
<p id="notice"><%= notice %></p>

<h1>Listing All ReviewCategories</h1>

<table class='table table-condensed'>
  <thead>
    <tr>
      <th>Category name</th>
      <th>Number of Reviews Total</th>
      <th>Number of Reviews By You </th> 
      <th>Created At</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.category_name %></td>
        <td> <%= category.review_posts.length %> </td> 
        <td> <%= category.review_posts.map do |element|
                element if element.user_admin == @user 
                end.length %> 
          </td> 
        <td> <%= category.created_at %> </td>  
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Go Back to Admin Dashboard', admin_homepage_path %> | <%= link_to 'New Category', new_category_path %> 
</div> 
